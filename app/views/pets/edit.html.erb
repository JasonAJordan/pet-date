<h1> Edit Page </h1>

<ul><% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <li><p><%= error %></p></li>
  <% end %>
<% end %>
</ul>

<%= form_for @pet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :bio %>
  <%= f.text_field :bio %><br><br>

  <%= f.label :age %>
  <%= f.number_field :age %><br><br>

  <%= f.submit %>
<% end %>