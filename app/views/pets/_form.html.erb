<%= render 'shared/errors' %>

<div class="new-container">

<%= form_for @pet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :bio %>
  <%= f.text_field :bio %><br><br>

  <%= f.label :species %>
  <%= f.select :species, [ 'Cat', 'Dog', 'Rabbit', 'Bird', 'Lizard', 'Other' ], :prompt => 'Select One' %><br><br>

  <%= f.label :age %>
  <%= f.select :age, (1..20), :prompt => 'Select Age' %><br><br>

  <%= f.label :likes %>
  <%= f.text_field :likes %><br><br>

  <%= f.label :dislikes %>
  <%# <div class="new-text" > %>
  <%= f.text_field :dislikes %><br><br>
  <%# </div> %>

  <%= f.label "Profile Photo" %>
  <%= f.file_field :picture %><br><br>

  <%# <%= f.label :user_id 
  <%= f.collection_select :user_id, @users, :id, :name, prompt:true %> 
  <%= f.hidden_field :user_id, value: @current_user.id %>


  <%= f.submit %>
<% end %>
</div>