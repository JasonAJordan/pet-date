<%= render 'shared/errors' %>

<%= form_for @pet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :bio %>
  <%= f.text_field :bio %><br><br>

  <%= f.label :age %>
  <%= f.select :age, (1..100) %><br><br>

  <%= f.label "Profile Photo" %>
  <%= f.file_field :picture %><br><br>

  <%# <%= f.label :user_id 
  <%= f.collection_select :user_id, @users, :id, :name, prompt:true %> 

  <%= f.hidden_field :user_id, value: @current_user.id %>

  

  <%= f.submit %>
<% end %>