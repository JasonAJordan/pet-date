<%= render 'shared/errors' %>

<%= form_for @meeting do |f| %>
  <%= f.label :time %>
  
  <%= f.datetime_select :time, :default => 0.days.from_now.in_time_zone("America/New_York") %><br><br>
  <%# <%= f.datetime_select :time, default: {hour: 9, min: 0} %>
  <%# f.datetime_select(:req_sess_start, :start_year => 2010, :ampm => true, :default => 0.days.from_now.in_time_zone(@timezone)) %>

  <%= f.label "My Pets" %>
  <%= f.collection_select :requestie_id, @requesties, :id, :name  %><br><br>
  
  <%= f.label "Other Pets" %>
  <%= f.collection_select :requester_id, @requesteds, :id, :name  %><br><br>

  <%= f.label :location_id %>
  <%= f.collection_select :location_id, @locations, :id, :name  %><br><br>

  <%= f.hidden_field :status, value: 'Requested'  %> 

  <%= f.submit %>
<% end %>