<h1> Edit Date </h1>

<ul><% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <li><p><%= error %></p></li>
  <% end %>
<% end %>
</ul>

<%= form_for @meeting do |f| %>
  <%= f.label :time %>
  <%= f.number_field :time %><br><br>

  <%= f.label :status %>
  <%= f.select :status, [ 'Requested', 'Accepted' ], :prompt => 'Select One' %><br><br>

  <%= f.label :requester_id %>
  <%= f.collection_select :requester_id, @requesteds, :id, :name  %><br><br>

  <%= f.label :requestie_id %>
  <%= f.collection_select :requestie_id, @requesties, :id, :name  %><br><br>

 <%= f.label :location_id %>
  <%= f.collection_select :location_id, @locations, :id, :name  %><br><br>

  <%= f.submit %>
<% end %>