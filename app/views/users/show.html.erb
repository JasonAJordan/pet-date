<h1><%= @user.name %></h1>

<p> <%= @user.bio %> </p>

 <% if @user.picture.attached? %>
   
   <% variant = @user.picture.variant(resize_to_limit: [300, 300]).processed %>
        <img src="<%=(url_for(variant))%>">
  <% end %>

<h3>My Pets </h3>

<ul>
    <% @user.pets.each do |pet| %> 
    <li><%= link_to pet.name, pet_path(pet.id) %> </li>
    <% end %> 
</ul>