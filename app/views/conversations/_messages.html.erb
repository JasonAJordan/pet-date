<br>
<% @receipts.each do |receipt| %>
    <% message = receipt.message %>
    <div class="media">
      <div class="media-left">
        <!-- user avators can go here -->
        <a href="#">
           <!-- <img class="media-object" src="http://placehold.it/64x64" alt="..."> --->
          
          <% if message.sender.picture.attached? %>
   
          <% variant = message.sender.picture.variant(resize_to_limit: [100, 100]).processed %>
          <img src="<%=(url_for(variant))%>">

        <% end %>
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading">
          <%= message.sender.name %> <br>
          <small><b>Subject: </b><%= message.subject %></small><br>
          <small><b>Date: </b><%=  message.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
        </h4>
        <%= message.body %>
      </div>
    </div>
<% end %>
<br>